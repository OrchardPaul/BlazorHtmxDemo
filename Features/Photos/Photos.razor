@page "/photos"

<h1>Photos</h1>

<div class="container-fluid">
    <div class="control-panel">                
        <form class="controls">
            <button class="btn btn-primary" aria-label="Prev" type="submit">Prev</button>
            <button class="btn btn-primary" aria-label="Next" type="submit">Next</button>
        </form>
        <form hx-get="/photos/search" hx-target="#photo-sheet" class="controls">
            <input type="number" name="page" class="form-control" aria-label="Page" min="1" max="3000" value="1"/>
            <input type="number" name="size" class="form-control" aria-label="Length" min="1" max="100" value="16"/>
            <button class="btn btn-primary" aria-label="Load" type="submit">Load</button>
        </form>      
    </div>
    <div id="photo-sheet" hx-get="/photos/search?page=1&size=16" hx-trigger="load"></div>
</div>
