@using Microsoft.AspNetCore.Components.Forms
@inject IHttpContextAccessor contextAccessor

<form class="controls">
    <button class="btn btn-primary" aria-label="Prev" hx-post="/photos/prev" hx-target="closest .control-panel">Prev</button>
    <button class="btn btn-primary" aria-label="Next" hx-post="/photos/next" hx-target="closest .control-panel">Next</button>
</form>
<form hx-post="/photos/search" hx-target="closest .control-panel" class="controls">
    <input type="number" name="page" class="form-control" aria-label="Page" min="1" max="3000" value="@_page"/>
    <input type="number" name="size" class="form-control" aria-label="Length" min="1" max="100" value="@_size"/>
    <button class="btn btn-primary" aria-label="Load" type="submit">Load</button>
    <AntiforgeryToken/>
</form>

@code {
    private int _page;

    private int _size;

    protected override void OnInitialized()
    {
        PhotosState state = contextAccessor.HttpContext.Session.GetObjectFromJson<PhotosState>();
        _page = state.Page;
        _size = state.Size;
    }
}