/*
 * Rosie Taylor Branding
 * Header Component
 * This component renders the header with navigation and branding.
 */

@code{
    private bool IsMenuOpen = false;
    private readonly string Message = "Welcome to Rosie Taylor Branding!";

    private record NavItem(string Label, string Href);
    private readonly NavItem[] navItems = new[]
    {
        new NavItem("About", "#about"),
        new NavItem("Portfolio", "#portfolio"),
        new NavItem("Process", "#process"),
        new NavItem("Testimonials", "#testimonials"),
        new NavItem("Contact", "/contact"),
    };

    private void SetIsMenuOpen(bool value)
    {
        IsMenuOpen = value;
    }

        
}
<header class="fixed top-0 left-0 right-0 z-50 bg-background-80 backdrop-blur-md border-b h-16">
      <div class="container">
        <div class="flex items-center justify-between h-16">
          <div class="font-bold text-xl">
            <span class="text-gradient-primarycol-to-secondarycol">
              Rosie Taylor
            </span>
            <span class="text-foreground"> Branding</span>
          </div>

          @* Desktop Navigation *@
          <nav class="hidden md-flex items-center space-x-8">
            <a
                hx-get="/api/home"
                hx-target="#content"
                hx-swap="innerHTML"
                class="text-muted-foreground hover-text-primarycol transition-colors font-medium"
              >
                Home
              </a>
              <a
                hx-get="/api/about"
                hx-target="#content"
                hx-swap="innerHTML"
                class="text-muted-foreground hover-text-primarycol transition-colors font-medium"
              >
                About
              </a>
              <a
                hx-get="/api/contact"
                hx-target="#content"
                hx-swap="innerHTML"
                class="text-muted-foreground hover-text-primarycol transition-colors font-medium"
              >
                Contact
              </a>
          </nav>

          <div class="flex items-center gap-4">
            @* <ThemeToggle /> *@
            <button
              class="hidden md-inline-flex btn-primarycol border-none"
              size="sm"
            >
              Get Started
            </button>

            @* Mobile Menu Button *@
            <button
              variant="ghost"
              size="sm"
              class="md-hidden"
              onclick="SetIsMenuOpen(!IsMenuOpen)"
            >
                <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
          </div>
        </div>

        @* Mobile Navigation *@
        @if(IsMenuOpen)
        {
          <nav class="md-hidden py-4 border-t">
            <div class="space-y-4">
              @foreach (var item in navItems)
              {
                <a
                  key="@item.Label"
                  href="@item.Href"
                  class="block text-muted-foreground hover-text-primarycol transition-colors font-medium"
                  onclick="SetIsMenuOpen(false)"
                >
                  @item.Label
                </a>
              }
              <button 
                class="w-full btn-primarycol border-none mt-4"
                onclick="SetIsMenuOpen(false)"
              >
                Get Started
              </button>
            </div>
          </nav>
        }
      </div>
    </header>