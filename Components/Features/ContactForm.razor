@using MudBlazor

<section id="contact" class="py-16 bg-background">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">
                Let's Create Something
                <span class="bg-gradient-to-r from-primarycol to-secondarycol bg-clip-text text-transparent">
                    Amazing Together
                </span>
            </h2>
            <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                Ready to transform your brand? I'd love to hear about your business and discuss how we can work together.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="space-y-8">
                <div>
                    <h3 class="text-2xl font-semibold mb-6">Get in Touch</h3>
                    <div class="space-y-4">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 bg-primarycol/10 rounded-lg flex items-center justify-center">
                                <svg class="h-6 w-6 text-primarycol" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">Email</div>
                                <div class="text-muted-foreground">hello@rosietaylorbranding.co.uk</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 bg-secondarycol/10 rounded-lg flex items-center justify-center">
                                <svg class="h-6 w-6 text-secondarycol" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">Phone</div>
                                <div class="text-muted-foreground">+44 (0) 7123 456789</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 bg-primarycol/10 rounded-lg flex items-center justify-center">
                                <svg class="h-6 w-6 text-primarycol" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="font-medium">Location</div>
                                <div class="text-muted-foreground">Serving businesses across the UK</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-r from-primarycol/10 to-secondarycol/10 border border-primarycol/20 rounded-lg p-6">
                    <h4 class="font-semibold mb-2">Free Brand Consultation</h4>
                    <p class="text-sm text-muted-foreground mb-4">
                        Book a complimentary 30-minute call to discuss your brand goals and see how I can help your business grow.
                    </p>
                    <button class="bg-gradient-to-r from-primarycol to-secondarycol text-white px-6 py-2 rounded-lg hover:shadow-lg transition-all duration-300">
                        Book Free Consultation
                    </button>
                </div>
            </div>

            <div class="bg-card border border-border rounded-lg p-6">
                <h3 class="text-xl font-semibold mb-6">Send a Message</h3>
                <form class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="text-sm font-medium mb-2 block">First Name</label>
                            <input type="text" placeholder="Your first name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primarycol/50 focus:border-primarycol" />
                        </div>
                        <div>
                            <label class="text-sm font-medium mb-2 block">Last Name</label>
                            <input type="text" placeholder="Your last name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primarycol/50 focus:border-primarycol" />
                        </div>
                    </div>
                    
                    <div>
                        <label class="text-sm font-medium mb-2 block">Email Address</label>
                        <input type="email" 
                               placeholder="your.email@example.com" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primarycol/50 focus:border-primarycol"
                               required />
                    </div>
                    
                    <div>
                        <label class="text-sm font-medium mb-2 block">Business Name</label>
                        <input type="text" placeholder="Your business name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primarycol/50 focus:border-primarycol" />
                    </div>
                    
                    <div>
                        <label class="text-sm font-medium mb-2 block">Message</label>
                        <textarea 
                            placeholder="Tell me about your business and what you're looking to achieve..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primarycol/50 focus:border-primarycol min-h-[120px] resize-none"
                            rows="5"></textarea>
                    </div>

                    <button type="submit" class="w-full bg-gradient-to-r from-secondarycol to-primarycol text-white px-6 py-3 rounded-lg hover:shadow-lg transition-all duration-300 flex items-center justify-center gap-2">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                        </svg>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>